<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="android.of.road.com.course1.Course1MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextItemStyle"
            android:onClick="createCoordinatorLayout"
            android:text="创建使用CoordinatorLayout" />

        <include layout="@layout/line_item_layout" />

        <TextView
            style="@style/TextItemStyle"
            android:onClick="createAppBarLayout"
            android:text="创建使用AppBarLayout" />

        <include layout="@layout/line_item_layout" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
